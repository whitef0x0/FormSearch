extends layout

block content

  form.form-horizontal(action='/api/upload', method='post',enctype='multipart/form-data')
    fieldset
        //
           Form Name 
        legend Upload a Form
        //
           Text input
        .control-group
          label.control-label(for='title') Form Title
          .controls
            input#title.input-xlarge(name='title', type='text', placeholder='ex. KMC Asthma Refferal Form', required='')
            p.help-block title of form (look at top) 
       //
           Select Basic
      
      .control-group
        label.control-label(for='selectbasic') Diagnosis/Reason
        .controls
          select#selectbasic.input-large(name="reason")
            for reason in reasons
              option(value=reason.rid)!=reason.name

        //
           Multiple Checkboxes 
        .control-group
          label.control-label(for='is_ped') Is it Pediatric?
          .controls
            label.checkbox(for='Pediatric-0', required='')
              input#Pediatric-0(type='checkbox', name='ped_t', value='t')
              | Yes
            label.checkbox(for='Pediatric-1')
              input#Pediatric-1(type='checkbox', name='ped_f', value='t')
              | No
      //
           Select Basic
      
      .control-group
        label.control-label(for='selectbasic') City
        .controls
          select#selectbasic.input-large(name="city", id="city")
            option(value='null')
            for place in places
              option(value=place.pid)!=place.city
      //
           Select Basic

      .control-group
        label.control-label(for='selectbasic') Institution
        .controls
          select#selectbasic.input-large(id = "institution", name="institution")
          
          // Handlebars template for institutions
          script(id="template", type="text/x-handlebars-template")
            {{#each places}}
            option(value='{{pid}}')  {{name}}
            {{/each}}
            
      //
         File Button 
      .control-group
        label.control-label(for='upload') Upload Form
        .controls
          input#upload.input-file(type='file')
      //
         Button 
      .control-group
        label.control-label(for='singlebutton')
        .controls
          button#singlebutton.btn.btn-primary(type ='submit', name='singlebutton') Submit Form